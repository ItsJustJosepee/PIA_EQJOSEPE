@model IEnumerable<PIA_EQJOSEPE.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>Usuarios Registrados</h2>

<p>
    <a href="/Usuarios/Create" class="btn btn-primary">Agregar Usuario</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Cumpleaños</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdUsuario</td>
                <td>@item.NombreUsu</td>
                <td>@item.Email</td>

                <td>
                    @(item.Cumpleaños.HasValue
                                    ? item.Cumpleaños.Value.ToString("d")
                                    : "—")
            </td>

                <td>
                    <a href="/Usuarios/Edit/@item.IdUsuario" class="btn btn-warning">Editar</a>
                    <a href="/Usuarios/Delete/@item.IdUsuario" class="btn btn-danger"
                       onclick="return confirm('¿Seguro que deseas eliminar este usuario?');">
                        Eliminar
                    </a>
                </td>
            </tr>
                }
    </tbody>
</table>
